@using VacationTrip.Models.Siniflar
@model List<Blog>
<div class="padding">
    <h4>Haftanın En popüler 10 Bloğu</h4>
    <ul class="list list-pad">
        @{
            int i = 0;
        }
        @foreach(var x in Model)
        {
            <li class="list-bg"><span>@{i++; } @i. </span><a href="/Blog/Blogdetay/@x.ID">@x.Baslik</a></li>
        }
       
    </ul>
    <a href="/Blog/Index" class="link1">Tüm Blogları Gör</a>
</div>